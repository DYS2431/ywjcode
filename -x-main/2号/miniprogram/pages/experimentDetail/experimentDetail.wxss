/* pages/experimentDetail/experimentDetail.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
}

.experiment-detail {
  background-color: white;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.detail-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.detail-description, .detail-category, .detail-price, .detail-materials, .detail-steps {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.back-button {
  display: block;
  width: 80%;
  margin: 0 auto;
  padding: 15rpx;
  background-color: #1296db;
  color: white;
  border: none;
  border-radius: 10rpx;
  font-size: 28rpx;
  text-align: center;
}
