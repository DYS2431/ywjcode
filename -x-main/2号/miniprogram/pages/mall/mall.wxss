/* pages/mall/mall.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
}

/* 搜索功能样式 */
.search-box {
  display: flex;
  margin-bottom: 20rpx;
  padding: 10rpx;
  background-color: white;
  border-radius: 10rpx;
}

.search-box input {
  flex: 1;
  padding: 10rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx 0 0 10rpx;
}

.search-box button {
  padding: 10rpx 20rpx;
  background-color: #1296db;
  color: white;
  border: none;
  border-radius: 0 10rpx 10rpx 0;
}

/* 实验列表样式 */
.experiment-list {
  margin-top: 20rpx;
}

.experiment-item {
  display: flex;
  justify-content: space-between;
  background-color: white;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 15rpx;
}

.experiment-content {
  flex: 1;
}

.experiment-name {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.experiment-category {
  font-size: 24rpx;
  color: #666;
}

.experiment-actions button {
  padding: 10rpx 15rpx;
  background-color: #1296db;
  color: white;
  border: none;
  border-radius: 5rpx;
  font-size: 24rpx;
}
