/* pages/login/login.wxss */
.container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  background-color: #f5f5f5;
}

.login-form {
  width: 80%;
  padding: 30rpx;
  background-color: white;
  border-radius: 10rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
}

.title {
  text-align: center;
  margin-bottom: 30rpx;
  font-size: 36rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
}

.button {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: white;
  background-color: #1296db;
  border: none;
  border-radius: 10rpx;
}

.register-tip {
  text-align: center;
  font-size: 24rpx;
  color: #1296db;
}
