/* pages/database/database.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
}

.title {
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.upload-form {
  background-color: white;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.form-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.form-input, .form-textarea {
  width: 100%;
  margin-bottom: 15rpx;
  padding: 10rpx;
  border: 1rpx solid #ccc;
  border-radius: 5rpx;
}

.form-textarea {
  height: 150rpx;
  min-height: 150rpx;
}

.form-button {
  width: 100%;
  padding: 15rpx;
  background-color: #1296db;
  color: white;
  border: none;
  border-radius: 5rpx;
  font-size: 28rpx;
}

.list-title {
  font-size: 28rpx;
  font-weight: bold;
  margin: 20rpx 0;
}

.experiment-list {
  background-color: white;
  border-radius: 10rpx;
  padding: 20rpx;
}

.experiment-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #eee;
}

.experiment-info {
  flex: 1;
}

.experiment-name, .experiment-category {
  margin-bottom: 5rpx;
}

button {
  padding: 5rpx 10rpx;
  background-color: #1296db;
  color: white;
  border: none;
  border-radius: 5rpx;
  font-size: 24rpx;
}
