<!--pages/experimentDetail/experimentDetail.wxml-->
<view class="container">
  <view class="experiment-detail">
    <text class="detail-title">{{experiment.name}}</text>
    <text class="detail-description">{{experiment.description}}</text>
    <text class="detail-category">分类: {{experiment.category}}</text>
    <text class="detail-price">价格: ¥{{experiment.price}}</text>
    <text class="detail-materials">材料: {{experiment.materials.join(', ')}}</text>
    <text class="detail-steps">步骤: {{experiment.steps}}</text>
  </view>
  <button bindtap="navigateBack" class="back-button">返回商城</button>
</view>
